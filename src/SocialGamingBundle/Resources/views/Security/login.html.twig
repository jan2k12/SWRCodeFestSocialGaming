{% block content %}
    <div class="container" style="margin-top:2em;">
    {% if error %}
        <div class="row">
            <div class="alert alert-danger" role="alert">{{ error.message }}</div>
        </div>
    {% endif %}
    <div class="row">
        <div class="col-md-12">
            <form id="login" action="{{ path('social_gaming_login') }}" method="post">
                <label for="username" class="col-form-label">Username:</label>
                <input type="text" id="username" class="form-control" name="_username" placeholder="Username oder Email" value="{{ last_username }}" />
                <br/>
                <label for="password" class="col-form-label" >Password:</label>
                <input type="password" class="form-control" id="password" placeholder="password" name="_password" />

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}
                <br/>
                <button type="submit" class="form-control btn btn-default">login</button>
            </form>

        </div>
    </div>
    <script>
        $('#login').submit(function(event){
            event.preventDefault();
            console.log('done');
            $.ajax({
                url: '/login',
                type:'POST',
                data: $(this).serialize()
            }).done(function(data){
                $('#content').html(data);
            })

        });
    </script>

{% endblock %}