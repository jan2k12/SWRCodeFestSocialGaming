{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <div class="row">
                    <div class="overlay_text highscore col-md-12" style="text-align: left;">
                        <div style="position:relative;">
                            <h2 style="margin-top:7px;">Highscore</h2>
                        </div>
                    </div>
